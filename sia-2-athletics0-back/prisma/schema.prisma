generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model blood {
  id     Int      @id @default(autoincrement())
  person person[]
}

model nationality {
  id     Int      @id @default(autoincrement())
  person person[]
}

model person {
  id                     Int         @id @default(autoincrement())
  name                   String
  emergencyContact       Int
  emergencyContactPerson String
  NationalityId          Int
  weight                 Float
  height                 Float
  BloodId                Int
  acadYear               Int
  StatusId               Int
  CreatedAt              DateTime    @default(now())
  UpdatedAt              DateTime
  blood                  blood       @relation(fields: [BloodId], references: [id], map: "Person_BloodId_fkey")
  nationality            nationality @relation(fields: [NationalityId], references: [id], map: "Person_NationalityId_fkey")
  status                 status      @relation(fields: [StatusId], references: [id], map: "Person_StatusId_fkey")

  @@index([BloodId], map: "Person_BloodId_fkey")
  @@index([NationalityId], map: "Person_NationalityId_fkey")
  @@index([StatusId], map: "Person_StatusId_fkey")
}

model status {
  id     Int      @id @default(autoincrement())
  person person[]
}
